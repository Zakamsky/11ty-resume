{% set pageUrl = page.url.split('/').slice(2).join('/') %}

{% if locales.length %}
  <ul class="language-list" aria-label="{{ 'select_language' | i18n }}">
    {% for locale in locales -%}
      <li class="language-list__item">
        <a class="language-list__link has-tooltip"
           href="/{{ locale.code }}/{{ pageUrl }}"
           rel="alternate"
           hreflang="{{ locale.code }}"
           aria-label="{{ locale.label }}"
           title="{{ locale.label }}"
        >
            <svg class="language-list__icon --{{ locale.code }}"  width="20" height="15">
                <use xlink:href="#flag-{{ locale.code }}"></use>
            </svg>

        </a>
      </li>
    {% endfor -%}
  </ul>
{% endif %}

